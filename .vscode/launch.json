{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Extension",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/taskolio-vscode-client"
      ],
      "outFiles": [
        "${workspaceFolder}/taskolio-vscode-client/out/**/*.js"
      ],
      "preLaunchTask": "npm"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/taskolio-vscode-client",
          "--extensionTestsPath=${workspaceFolder}/taskolio-vscode-client/test"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/controller-webserver/src/server.js"
    }
  ]
}