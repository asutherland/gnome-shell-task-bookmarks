{
  "manifest_version": 2,
  "name": "Taskolio Webextension",
  "version": "0.4.3",

  "description": "Taskolio Browser Integration",

  "applications": {
    "gecko": {
      "id": "taskolio@visophyte.org"
    }
  },

  "developer": {
    "name": "Andrew Sutherland",
    "url": "https://github.com/asutherland/taskolio"
  },

  "icons": {
    "48": "icons/taskolio-48.png"
  },

  "background": {
    "page": "background/index.html"
  },
  "permissions": [
    "menus",
    "sessions",
    "tabs",
    "<all_urls>"
  ]
}
